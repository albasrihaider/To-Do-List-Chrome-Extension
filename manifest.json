{
    "manifest_version": 3,
    "name": "Side Tasker",
    "version": "1.0",
    "permissions": [ "sidePanel", "storage" ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "Click to open side panel",
        "default_icon": "logos/128.png"
    },
    "icons": {
        "16": "logos/16.png",
        "24": "logos/24.png",
        "32": "logos/32.png",
        "48": "logos/48.png",
        "128": "logos/128.png",
        "256": "logos/256.png"

    },
    "side_panel": {
        "default_path": "panel.html"
    }
}